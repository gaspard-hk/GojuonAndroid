<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GamePlayActivity" android:background="@color/colorBg">

    <Button
            android:text="Ans3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_game_play3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="75dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:background="@color/colorBtn"  android:textColor="@android:color/white"/>
    <Button
            android:text="Ans2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_game_play2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="135dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:background="@color/colorBtn"  android:textColor="@android:color/white"/>
    <Button
            android:text="Ans1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_game_play" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="195dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:background="@color/colorBtn"  android:textColor="@android:color/white"/>
    <TextView
            android:text="Go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtGojuon" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="90sp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@+id/activity_game_play" android:textColor="@android:color/white"/>
    <LinearLayout
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" android:layout_marginStart="30dp" android:layout_width="wrap_content"
    >
        <TextView
                android:text="0"
                android:layout_span="1"
                android:padding="0dip"
                android:id="@+id/txtTotal" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textColor="@android:color/white"/>
        <TextView
                android:text="/10"
                android:layout_span="1"
                android:padding="0dip"
                android:id="@+id/txtTotalTitle" android:textSize="24sp" android:layout_height="wrap_content"
                android:layout_width="match_parent"  android:textColor="@android:color/white"/>
    </LinearLayout>


    <Button
            android:padding="0dip"
            android:text="Next"
            android:id="@+id/btnNext" app:layout_constraintEnd_toEndOf="parent" android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="28dp" android:layout_marginEnd="28dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@android:color/white" android:background="@color/colorBtn"  />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" android:id="@+id/linearLayout" android:gravity="center">
        <TextView
                android:layout_span="1"
                android:text="Score:"
                android:padding="0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtScoreTitle" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"  android:textColor="@android:color/white"/>
        <TextView
                android:layout_span="1"
                android:text="s"
                android:padding="0dip"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtScore" android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"  android:textColor="@android:color/white"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>